pipeline {
    agent any
    environment {
        JAVA_HOME = tool name: 'jdk', type: 'jdk'
        GRADLE_HOME = tool name: 'Gradle', type: 'gradle'
    }
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Build') {
            steps {
                sh "${GRADLE_HOME}/bin/gradle clean build"
            }
        }
        stage('Test') {
            steps {
                sh "${GRADLE_HOME}/bin/gradle test"
            }
        }
        stage('Deploy') {
            steps {
                sh "java -jar build/libs/keycloak-demo-0.0.1-SNAPSHOT.jar"
            }
        }
    }
    post {
        always {
            archiveArtifacts artifacts: 'build/libs/**/*.jar', allowEmptyArchive: true
        }
        success {
            echo 'Build and deployment successful!'
        }
        failure {
            echo 'Build or deployment failed!'
        }
    }
}
