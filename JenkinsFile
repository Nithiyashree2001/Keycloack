pipeline {
    agent any
    environment {
        GRADLE_HOME = tool name: 'Gradle', type: 'gradle'
    }
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Build') {
            steps {
                sh "${GRADLE_HOME}/bin/gradle clean build"
            }
        }
        stage('Run Snapshot Jar') {
            steps {
                sh "java -jar build/libs/snapshot.jar"
            }
        }
        stage('Run Plain Snapshot Jar') {
            steps {
                sh "java -jar build/libs/plainsnapshot.jar"
            }
        }
    }
    post {
        always {
            archiveArtifacts artifacts: 'build/libs/**/*.jar', allowEmptyArchive: true
        }
        success {
            echo 'Build and deployment successful!'
        }
        failure {
            echo 'Build or deployment failed!'
        }
    }
}
